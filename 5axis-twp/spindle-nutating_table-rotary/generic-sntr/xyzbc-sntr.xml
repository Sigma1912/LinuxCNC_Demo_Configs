    <hbox>
    <label>
       <text>" "</text>
       <font>("Helvetica",4)</font>
    </label>
    </hbox>
  </vbox>

  <vbox>
  <labelframe text="Spindle Geometry">
    <font>("Helvetica",12)</font>
    <hbox>
    <label>
       <text>"nutation-angle:   "</text>
       <font>("Helvetica",10)</font>
    </label>
    <scale>
	<font>("Helvetica",10)</font>
	<width>"12"</width>
	<halpin>"nut-angle"</halpin>
	<resolution>1</resolution>
	<orient>HORIZONTAL</orient>
	<initval>55</initval>
	<min_>0</min_>
	<max_>90</max_>
    </scale>
    </hbox>
    <hbox>
    <label>
       <text>"y-pivot-length:   "</text>
       <font>("Helvetica",10)</font>
    </label>
    <scale>
	<font>("Helvetica",10)</font>
	<width>"12"</width>
	<halpin>"y-pivot"</halpin>
	<resolution>1</resolution>
	<orient>HORIZONTAL</orient>
	<initval>200</initval>
	<min_>0</min_>
	<max_>300</max_>
    </scale>
    </hbox>
    <hbox>
    <label>
       <text>"z-pivot-length:   "</text>
       <font>("Helvetica",10)</font>
    </label>
    <scale>
	<font>("Helvetica",10)</font>
	<width>"12"</width>
	<halpin>"z-pivot"</halpin>
	<resolution>1</resolution>
	<orient>HORIZONTAL</orient>
	<initval>300</initval>
	<min_>-100</min_>
	<max_>300</max_>
    </scale>
    </hbox>
    <hbox>
    <label>
       <font>("Helvetica",8)</font>
       <text>" "</text>
    </label>
    </hbox>
  </labelframe>
  </vbox>

  <vbox>
  <labelframe text="Table Rotation Axis Offset">
    <font>("Helvetica",12)</font>
     <hbox>
    <label>
       <font>("Helvetica",8)</font>
       <text>" "</text>
    </label>
    </hbox>
    <hbox>
    <label>
       <font>("Helvetica",8)</font>
       <text>"Physical location of rotation-axis in the model\n in absolute machine coordinates:"</text>
    </label>
