      <bg>"black"</bg>
      <fg>"yellow"</fg>
    </multilabel>
    <button>
      <halpin>"type0-button"</halpin>
      <text>"IDENTITY"</text>
      <bd>3</bd>
    </button>
    <button>
      <halpin>"type1-button"</halpin>
      <text>"TCP"</text>
      <bd>3</bd>
    </button>
    <button>
      <halpin>"type2-button"</halpin>
      <text>"TWP"</text>
      <bd>3</bd>
    </button>
