    <scale>
        <font>("Helvetica",10)</font>
        <width>"15"</width>
        <halpin>"x-rot-axis"</halpin>
        <resolution>1</resolution>
        <orient>HORIZONTAL</orient>
        <initval>1000</initval>
        <min_>950</min_>
        <max_>1050</max_>
    </scale>
    </hbox>
    <hbox>
    <label>
       <text>"y-rot-axis:   "</text>
       <font>("Helvetica",10)</font>
    </label>
    <scale>
        <font>("Helvetica",10)</font>
        <width>"15"</width>
        <halpin>"y-rot-axis"</halpin>
        <resolution>1</resolution>
        <orient>HORIZONTAL</orient>
        <initval>-1000</initval>
        <min_>-1050</min_>
        <max_>-950</max_>
