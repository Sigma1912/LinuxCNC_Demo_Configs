  <vbox>
  <labelframe text="Rotary Assembly Offset">
    <font>("Helvetica",14)</font>
    <hbox>
    <label>
       <text>"table-angle:   "</text>
       <font>("Helvetica",10)</font>
    </label>
    <scale>
	<font>("Helvetica",10)</font>
	<width>"12"</width>
	<halpin>"table-angle"</halpin>
	<resolution>1</resolution>
	<orient>HORIZONTAL</orient>
	<initval>-45</initval>
	<min_>-90</min_>
	<max_>-0</max_>
    </scale>
    </hbox>
    <hbox>
    <label>
       <text>"nutation-angle:   "</text>
       <font>("Helvetica",10)</font>
    </label>
    <scale>
	<font>("Helvetica",10)</font>
	<width>"12"</width>
	<halpin>"nut-angle"</halpin>
	<resolution>1</resolution>
	<orient>HORIZONTAL</orient>
	<initval>55</initval>
	<min_>0</min_>
	<max_>90</max_>
    </scale>
    </hbox>
    <hbox>
    <label>
       <text>"x-offset:   "</text>
       <font>("Helvetica",10)</font>
    </label>
    <scale>
        <font>("Helvetica",10)</font>
        <width>"15"</width>
        <halpin>"x-offset"</halpin>
        <resolution>1</resolution>
        <orient>HORIZONTAL</orient>
        <initval>50</initval>
        <min_>-250</min_>
        <max_>250</max_>
    </scale>
    </hbox>
    <hbox>
    <label>
       <text>"z-offset:   "</text>
       <font>("Helvetica",10)</font>
    </label>
    <scale>
        <font>("Helvetica",10)</font>
        <width>"15"</width>
        <halpin>"z-offset"</halpin>
        <resolution>1</resolution>
        <orient>HORIZONTAL</orient>
        <initval>250</initval>
        <min_>-50</min_>
        <max_>350</max_>
    </scale>
    </hbox>
  <hbox>
    <label>
       <text>"Scale Coords:   "</text>
       <font>("Helvetica",10)</font>
    </label>
    <scale>
	<font>("Helvetica",10)</font>
	<width>"12"</width>
	<halpin>"scale-coords"</halpin>
	<resolution>0.05</resolution>
	<orient>HORIZONTAL</orient>
	<initval>1</initval>
	<min_>0</min_>
	<max_>2</max_>
    </scale>
    </hbox>
    <hbox>
    <label>
       <font>("Helvetica",8)</font>
       <text>" "</text>
    </label>
    </hbox>
    <hbox>
    <label>
       <text>"Use hover + mouse wheel to change values"</text>
       <font>("Helvetica",6)</font>
    </label>
    </hbox>
